{% extends 'base.html.twig' %}
{% block title %}Utilisateurs{% endblock %}
    {% block body %}
        <div class="main">
            {{ include('include/_navigation.html.twig') }}
            <div class="content">

                <div class="welcome-container-title">

                    <h1>Modifier son profil</h1>
                    <a class="bouton-2" href="{{ path('user_index') }}">Quitter <i class="fas fa-times"></i></a>
                </div>
                <div class="welcome-container-pass">
                    {{ form_start(form) }}
                    <p>Modifier l'email</p>
                    {% for message in app.flashes('profilmailsuccess') %}
                        <div class="greenAlert">
                            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('profilmaildanger') %}
                        <div class="redAlert">
                            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                            {{ message }}
                        </div>
                    {% endfor %}
                    {{ form_row(form.email) }}
                    <div class="bouton-box">
                        <button class="bouton-1" style="border: none">{{ button_label|default('Modifier') }}</button>
                    </div>
                    {{ form_end(form) }}
                </div>

                    <form method="post" action="">
                        <div class="welcome-container-pass">
                        <p>modifier le mot de passe</p>
                            {% for message in app.flashes('profilsuccess') %}
                                <div class="greenAlert">
                                    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                                    {{ message }}
                                </div>
                            {% endfor %}
                            {% for message in app.flashes('profildanger') %}
                                <div class="redAlert">
                                    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                                    {{ message }}
                                </div>
                            {% endfor %}
                        <span>saisir le nouveau mot de passe</span>
                        <input type="password" name="pass" class="inputForm">
                        <span>Confirmer le nouveau mot de passe</span>
                        <input type="password" name="pass2" class="inputForm">
                        <div class="bouton-box">
                            <button class="bouton-1" style="border: none">{{ button_label|default('Modifier') }}</button>
                        </div>

                </div> </form>

            </div>
        </div>

        <style>
            .redAlert {
                padding: 20px;
                background-color: #f44336;
                color: white;
            }
            .greenAlert {
                padding: 20px;
                background-color: #448639;
                color: white;
            }

            .closebtn {
                margin-left: 15px;
                color: white;
                font-weight: bold;
                float: right;
                font-size: 22px;
                line-height: 20px;
                cursor: pointer;
                transition: 0.3s;
            }

            .closebtn:hover {
                color: black;
            }
        </style>
    {% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/formulaire.css') }}">
{% endblock %}
