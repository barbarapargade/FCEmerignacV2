{% extends 'base.html.twig' %}
{% block title %}Utilisateurs{% endblock %}
    {% block body %}
        <div class="main">
            {{ include('include/_navigation.html.twig') }}
            <div class="content">
                <div class="welcome-container-title">
                    <h1>Modifier l'utilisateur</h1>
                    <a class="bouton-2" href="{{ path('user_index') }}">Quitter <i class="fas fa-times"></i></a>
                </div>
                <div class="welcome-container">
                    {{ form_start(form) }}
                    <p>Modifier l'email</p>
                    {{ form_row(form.email) }}
                    <p>Modifier le niveau d'acc√®s</p>
                    {{ form_row(form.roles) }}
                    <p>Modifier le mot de passe</p>
                    {{ form_row(form.password) }}
                    <div class="bouton-box">
                        <button class="bouton-1" style="border: none">{{ button_label|default('Modifier') }}</button>
                    </div>
                    {{ form_end(form) }}



                </div>
        </div>
    </div>
{% endblock %}
