{% extends 'base.html.twig' %}
{% block title %}Membres{% endblock %}
    {% block body %}
        <div class="main">
            {{ include('include/_navigation.html.twig') }}
            <div class="content">
                <div class="welcome-container-title">
                    <h1>Ajout d'un membre</h1>
                    <a class="bouton-2" href="{{ path('user_index') }}">Quitter <i class="fas fa-times"></i></a>
                </div>
                <div class="welcome-container">
                    {{ form_start(registrationForm) }}
                    <p>Ajouter un email</p>
                    {{ form_row(registrationForm.email) }}
                    <p>Ajouter un mot de passe</p>
                    {{ form_row(registrationForm.plainPassword) }}
                    <p>Ajouter un niveau d'acc√®s</p>
                    {{ form_row(registrationForm.roles) }}
                    <div class="bouton-box">
                        <button class="bouton-1"
                                style="border: none">{{ button_label|default('Enregistrer') }}</button>
                    </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    {% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/formulaire.css') }}">
{% endblock %}